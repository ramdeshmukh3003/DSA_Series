#include <iostream>
using namespace std;
int main() {
    // Write C++ code here
    int n;
    cin>>n;
    for(int row=0;row<n;row++){
        for(int col=0;col<row+1;col++){
            if(row==0 || row==1 || row==n-1 || col==row || col==0){
                cout<<col+1<<" ";
            }
            else{
                cout<<"  ";
            }
        }
        cout<<endl;
    }

    return 0;
}


// star pattern # 41  -> sample output


//      1 
//      1 2 
//      1   3 
//      1     4 
//      1       5 
//      1 2 3 4 5 6 